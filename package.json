{
  "name": "pet-genie",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:app": "npm run start --workspace=@pet-genie/app",
    "build:core": "npm run build --workspace=@pet-genie/core",
    "build:app": "npm run build --workspace=@pet-genie/app",
    "dev:app": "npm run dev --workspace=@pet-genie/app",
    "android": "npm --workspace=@pet-genie/app run android",
    "ios": "npm --workspace=@pet-genie/app run ios"
  },
  "dependencies": {
    "aws-amplify": "^6.6.6",
    "date-fns": "^4.1.0",
    "expo": "~54.0.0",
    "firebase": "^12.8.0",
    "lodash-es": "^4.17.21",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-worklets": "^0.7.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "overrides": {
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@babel/types": "^7.28.6",
    "babel-plugin-module-resolver": "^5.0.2",
    "esbuild": "^0.20.2",
    "tsx": "^4.7.2",
    "typescript": "~5.9.2"
  }
}
