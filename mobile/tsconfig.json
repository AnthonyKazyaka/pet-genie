{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@pet-genie/shared": [
        "../packages/shared/src/index.ts"
      ],
      "@pet-genie/shared/*": [
        "../packages/shared/src/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "../packages/shared/src/**/*.ts"
  ]
}
